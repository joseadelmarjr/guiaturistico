<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/paisTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/pais"
        android:gravity="center"
        android:text="@string/pais"
        android:textSize="@dimen/tamFonte" />

    <ImageView
        android:id="@+id/bandeiraImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:contentDescription="@string/pais"
        android:foregroundGravity="center"
        android:maxWidth="@dimen/largura"
        app:srcCompat="@drawable/bandeira_default" />

    <ImageView
        android:id="@+id/pratoImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:foregroundGravity="center"
        android:maxWidth="200dp"
        app:srcCompat="@drawable/comida_default"
        android:contentDescription="@string/comida"/>

    <TextView
        android:id="@+id/bandeiraTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/comida"
        android:gravity="center"
        android:text="@string/comida"
        android:textSize="@dimen/tamFonte" />


</LinearLayout>